<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custob"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/onboardingback" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clipToPadding="false"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/home_frag_coffe_txt"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/custob"
            android:drawableTop="@mipmap/espressoicon"
            android:fontFamily="@font/open_sans_light"
            android:gravity="center_horizontal"
            android:text="Coffee"
            android:textColor="@color/brown_buttons"
            android:textSize="24sp">

        </TextView>


        <TextView
            android:id="@+id/home_frag_order_txt"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/custob"
            android:drawableTop="@mipmap/espressoicon"
            android:fontFamily="@font/open_sans_light"
            android:gravity="center_horizontal"
            android:text="Order"
            android:textColor="@color/brown_buttons"
            android:textSize="24sp">

        </TextView>

    </LinearLayout>

</LinearLayout>

