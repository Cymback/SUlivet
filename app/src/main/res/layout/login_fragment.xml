<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bba"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat"
            android:maxLines="1"
            android:text="@string/frag_login_header"
            android:textSize="45sp"
            android:textStyle="normal" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/fisk"
            android:fontFamily="@font/montserrat"
            android:maxLines="1"
            android:textSize="30sp"
            android:textStyle="normal" />


        <ProgressBar
            android:id="@+id/frag_login_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />


        <EditText
            android:id="@+id/frag_login_email_view"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_edittext"
            android:fontFamily="@font/advent_pro"
            android:hint="@string/frag_login_email_view"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:textColor="@color/blackText"
            android:textColorHint="@android:color/darker_gray"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/frag_login_password_view"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext"
            android:fontFamily="@font/advent_pro"
            android:hint="@string/frag_login_password_view"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColor="@color/blackText"
            android:textColorHint="@android:color/darker_gray"
            android:textStyle="bold" />


        <Button
            android:id="@+id/frag_login_login_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/card_edge"
            android:backgroundTint="@color/redcolor"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="@string/frag_login_button"
            android:textColor="@color/SolidWhite"
            android:textSize="16sp"
            android:textStyle="normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="15dp"
            android:layout_marginTop="-25dp"
            android:background="@color/greysigninsignup" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

        </LinearLayout>


        <com.facebook.login.widget.LoginButton
            android:id="@+id/facebook_login"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp" />


    </LinearLayout>
</LinearLayout>
