<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custob"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/open_sans_light"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="Password Retrieval Imminent"
            android:textColor="@color/brown_buttons"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/activity_forgot_email_input"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_edittext"
            android:fontFamily="@font/advent_pro"
            android:hint="@string/activity_forgot_password_email_hint"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:textColor="@color/blackText"
            android:textColorHint="@android:color/darker_gray"
            android:textStyle="bold" />


        <Button
            android:id="@+id/activity_forgot_send_password_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="55dp"
            android:background="@drawable/card_edge"
            android:backgroundTint="@color/brown_buttons"
            android:fontFamily="@font/oswald_light"
            android:text="Send new password"
            android:textSize="20sp" />


    </LinearLayout>


</LinearLayout>