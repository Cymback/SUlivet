<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fontFamily="@font/advent_pro"
    tools:context=".Activities.GoogleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="1dp">

        <ImageView
            android:layout_width="247dp"
            android:layout_height="163dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="-20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/frontlogo" />

        <ImageView
            android:layout_width="104dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/sulivetlogo"
            android:paddingBottom="50dp"
            android:paddingTop="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/advent_pro"
            android:text="Mad på SU"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/advent_pro"
            android:paddingTop="10dp"
            android:text="Tusindvis af lækre opskrifter til de helt små beløb!" />

        <com.shobhitpuri.custombuttons.GoogleSignInButton
            android:id="@+id/signInBtn"
            android:layout_width="215dp"
            android:layout_height="41dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="25dp"
            android:text="@string/google_sign_in"
            app:isDarkTheme="false" />

        <Button
            android:id="@+id/btn_to_login_with_email"
            android:layout_width="215dp"
            android:layout_height="41dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/cardview_shadow_end_color"
            android:fontFamily="@font/advent_pro"
            android:text="@string/log_in_with_pass"
            android:textSize="12dp"
            android:textStyle="bold" />


    </LinearLayout>


</ScrollView>