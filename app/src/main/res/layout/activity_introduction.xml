<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:seekarc="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bba2"
    tools:context=".Wizard.WizardOne">


    <ImageView
        android:id="@+id/fishy_header"
        android:layout_width="141dp"
        android:layout_height="139dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"

        android:layout_marginEnd="8dp"
        android:background="@drawable/fiskicon"
        android:padding="30dp"
        seekarc:layout_constraintEnd_toEndOf="parent"
        seekarc:layout_constraintStart_toStartOf="parent"
        seekarc:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="308dp"
        android:layout_height="149dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="0.4"
        android:fontFamily="@font/montserrat"
        android:gravity="center_horizontal"
        android:maxLines="4"
        android:text="@string/intro_in_a_world_txt"
        android:textColor="@color/redcolor"
        android:textSize="25sp"
        android:textStyle="italic"
        seekarc:layout_constraintEnd_toEndOf="parent"
        seekarc:layout_constraintHorizontal_bias="0.502"
        seekarc:layout_constraintStart_toStartOf="parent"
        seekarc:layout_constraintTop_toBottomOf="@+id/fishy_header" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center_horizontal"
        android:text="@string/intro_journey_starts_txt"
        android:textColor="@color/redcolor"
        android:textSize="25sp"
        android:textStyle="bold"
        seekarc:layout_constraintBottom_toBottomOf="parent"
        seekarc:layout_constraintEnd_toEndOf="parent"
        seekarc:layout_constraintHorizontal_bias="0.502"
        seekarc:layout_constraintStart_toStartOf="parent"
        seekarc:layout_constraintTop_toBottomOf="@+id/textView4"
        seekarc:layout_constraintVertical_bias="0.081" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="95dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/star"
        seekarc:layout_constraintBottom_toBottomOf="parent"
        seekarc:layout_constraintEnd_toEndOf="parent"
        seekarc:layout_constraintStart_toStartOf="parent"
        seekarc:layout_constraintTop_toBottomOf="@+id/textView5"
        seekarc:layout_constraintVertical_bias="0.034" />

    <ImageView
        android:id="@+id/intro_btn_letsgo"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/btnintro"
        seekarc:layout_constraintBottom_toBottomOf="parent"
        seekarc:layout_constraintEnd_toEndOf="parent"
        seekarc:layout_constraintStart_toStartOf="parent"
        seekarc:layout_constraintTop_toBottomOf="@+id/imageView2"
        seekarc:layout_constraintVertical_bias="0.761" />


</android.support.constraint.ConstraintLayout>