<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@drawable/mainback">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop">

        </ImageView>

        <TextView
            android:id="@+id/profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="76dp"
            android:fontFamily="@font/advent_pro"
            android:text="Casper Gross"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold">

        </TextView>


        <ImageView
            android:id="@+id/user_profile_photo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="-80dp"
            android:background="@drawable/profileicon"
            android:elevation="5dp"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:scaleType="centerCrop" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_profile_photo"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:elevation="4dp"
                android:padding="20dp">

                <TextView
                    android:id="@+id/profile__email_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/advent_pro"
                    android:padding="5dp"
                    android:text="Email"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/profile_change_email_icon"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="270dp"
                    android:background="@drawable/baseline_menu_black_24dp"
                    android:clickable="true"
                    android:text="Change"
                    android:textAlignment="center"
                    android:textSize="10dp" />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:elevation="4dp"
                android:padding="20dp">

                <TextView
                    android:id="@+id/profile_telephone_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/advent_pro"
                    android:padding="5dp"
                    android:text="Telefon"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/profile_change_tlf"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="270dp"
                    android:background="@drawable/baseline_menu_black_24dp"
                    android:clickable="true"
                    android:text="Change"
                    android:textAlignment="center"
                    android:textSize="10dp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:elevation="4dp"
                android:padding="20dp">

                <TextView
                    android:id="@+id/profile_address_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/advent_pro"
                    android:padding="5dp"
                    android:text="Address"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/profile_address_change_icon"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="270dp"
                    android:background="@drawable/baseline_menu_black_24dp"
                    android:clickable="true"
                    android:text="Change"
                    android:textAlignment="center"
                    android:textSize="10dp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:elevation="4dp"
                android:padding="20dp">

                <TextView
                    android:id="@+id/profile_interests_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/advent_pro"
                    android:padding="5dp"
                    android:text="Interests"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/profile_change_interests_icon"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="270dp"
                    android:background="@drawable/baseline_menu_black_24dp"
                    android:text="Change"
                    android:textAlignment="center"
                    android:textSize="10dp" />

            </android.support.v7.widget.CardView>


        </LinearLayout>
    </RelativeLayout>
</ScrollView>