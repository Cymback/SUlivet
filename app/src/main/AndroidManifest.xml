<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sulivet.sulivet">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.sulivet.sulivet.Activities.GoogleActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name="com.example.sulivet.sulivet.Wizard.WizardOne" />
        <activity android:name="com.example.sulivet.sulivet.Wizard.WizardTwo" />
        <activity android:name="com.example.sulivet.sulivet.Activities.MenuActivity" />
        <activity android:name="com.example.sulivet.sulivet.Activities.CheapRecipesActivity" />
        <activity android:name="com.example.sulivet.sulivet.Activities.ExpensiveRecipesActivity" />
        <activity android:name="com.example.sulivet.sulivet.Activities.InspirationActivity" />
        <activity android:name="com.example.sulivet.sulivet.Activities.RecipeDetailActivity" />
        <activity android:name="com.example.sulivet.sulivet.Activities.SplashScreenActivity" />
        <activity android:name="com.example.sulivet.sulivet.Activities.CreateAccountActivity" />
        <activity android:name="com.example.sulivet.sulivet.Activities.LoginActivity" />
        <activity android:name="com.example.sulivet.sulivet.Activities.ForgotPasswordActivity" />
        <activity android:name="com.example.sulivet.sulivet.Activities.EssentialActivity" />
        <activity android:name="com.example.sulivet.sulivet.Activities.FoodGeneratorActivity" />
        <activity android:name="com.example.sulivet.sulivet.Adapters.EssentialAdapter" />
        <activity android:name="com.example.sulivet.sulivet.Activities.ProfileActivity"></activity>
    </application>

</manifest>