<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sulivet.sulivet">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.SlidesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".Wizard.WizardOne" />
        <activity android:name=".Wizard.WizardTwo" />
        <activity android:name=".MenuActivities.RecipesActivity" />
        <activity android:name=".Activities.RecipeDetailActivity" />
        <activity android:name=".Activities.ForgotPasswordActivity" />
        <activity android:name=".Activities.MenuActivity" />
        <activity android:name=".MenuActivities.KitchenEssentialActivity" />
        <activity android:name=".MenuActivities.ProfileActivity" />
        <activity android:name=".Fragments.LoginHandler" />
        <activity android:name=".MenuActivities.FoodPlannerActivity" />
        <activity android:name=".MenuActivities.SettingsActivity" />
        <activity android:name=".MenuActivities.ChallengeModeActivity" />
        <activity android:name=".MenuActivities.EssentialDetailActivity" />
        <activity android:name=".Activities.FoodFinderActivity"></activity>
    </application>

</manifest>